---
// @ts-ignore  
import { AlignJustify } from "lucide-react"
---

<nav class="container-px w-screen bg-slate-800/90 text-white sm:flex sm:justify-between">
  <div class="w-full p-2 sm:hidden" >
    <div onclick="showMenu()">
      <AlignJustify />
    </div>
  </div>
  <div class="hidden sm:block" id="menu">
    <ul class=" px-0 flex flex-col sm:gap-4  sm:flex-row">
      <li><a href="/main">Home</a></li>
      <li><a href="/main/skd">Pengolahan SKD</a></li>
      <li><a href="/main/seleksi-lanjutan">Pengolahan Seleksi Lanjutan</a></li>
      <li><a href="/main/monitor">Monitor</a></li>
      <li class="sm:hidden"><a href="/login">Logout</a></li>
    </ul>
  </div>
  <div class="hidden sm:block">
    <a href="/login">Logout</a>
  </div>
</nav>

<style>
  a{
    @apply border-t-[1px] border-slate-200 w-full flex justify-center items-center py-2 hover:bg-slate-600  hover:border-slate-200 sm:border-[1px] sm:border-transparent sm:px-2 sm:my-2 sm:rounded-md transition-all duration-500
  }
</style>

<script is:inline>
  const menu = document.getElementById("menu")
  function showMenu(){
    menu?.classList.toggle("hidden")
  }
</script>